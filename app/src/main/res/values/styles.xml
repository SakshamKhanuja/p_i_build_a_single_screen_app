<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Attributes defines the theme for the app.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <!--Contains attributes that are basic layout parameters for a View-->
    <style name="BasicViewParameters">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Offer Heading Style-->
    <style name="OfferTitle" parent="TitleStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Offer Percent Off Style-->
    <style name="OfferOffStyle" parent="OfferTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--Offer Code-->
    <style name="OfferCodeStyle" parent="OfferOffStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <!--Styles any item/offer title-->
    <style name="TitleStyle" parent="BasicViewParameters">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Item Heading Style-->
    <style name="ItemTitleStyle" parent="TitleStyle">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!--Item Description Style-->
    <style name="ItemDescriptionStyle" parent="BasicViewParameters">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!--Styles the contents in the "About Us" section of the app.-->
    <style name="AppDescriptionStyle" parent="BasicViewParameters">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Item Price Style-->
    <style name="ItemPriceStyle" parent="BasicViewParameters">
        <item name="android:textStyle">bold</item>
    </style>


    <!--Style for contents present inside the HorizontalScrollView-->
    <style name="HorizontalChildStyle" parent="BasicViewParameters">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--CardView Style-->
    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!--Veg/Fruit Card Style-->
    <style name="ItemCardStyle" parent="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!--Vegetable Style-->
    <style name="ItemContainerStyle" parent="BasicViewParameters">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">16dp</item>
    </style>

    <!--Style for holding contents that tells the user about the offer-->
    <style name="OfferLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Dairy Layout-->
    <style name="DairyLayout" parent="OfferLayout">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--Offer Layout ImageView-->
    <style name="OfferLayoutImageView" parent="BasicViewParameters">
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <!--Handles the photo of an item, whether Vegetable/Dairy-->
    <style name="ItemPhotoStyle" parent="OfferLayoutImageView">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--Category Style-->
    <style name="Category" parent="BasicViewParameters">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Divider-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>
</resources>