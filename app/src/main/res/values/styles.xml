<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#EEEEEE</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">#424242</item>
    </style>

    <!--Basic Style for all TextViews-->
    <style name="BasicTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Offer Heading Style-->
    <style name="OfferTitle" parent="BasicTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Vegetable/Fruit Heading Style-->
    <style name="VegFruitTitle" parent="OfferTitle">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="VegFruitDescription" parent="BasicTextView">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="VegFruitPrice" parent="VegFruitDescription">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Offer Percent Off Style-->
    <style name="OfferOff" parent="OfferTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--Offer Code-->
    <style name="OfferCode" parent="OfferOff">
        <item name="android:textSize">14sp</item>
    </style>

    <!--HorizontalChildView Style-->
    <style name="HorizontalChildStyle" parent="BasicTextView">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--CardView Style-->
    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">#B71C1C</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!--Veg/Fruit Card Style-->
    <style name="VegFruitCardStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!--Vegetable Style-->
    <style name="VegFruitStyle" parent="BasicTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">16dp</item>
    </style>


    <!--Offer Layout-->
    <style name="OfferLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Dairy Layout-->
    <style name="DairyLayout" parent="OfferLayout">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--Offer Layout ImageView-->
    <style name="OfferLayoutImageView" parent="BasicTextView">
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="VegFruitImageView" parent="OfferLayoutImageView">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--Category Style-->
    <style name="Category" parent="BasicTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Divider-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">#E0E0E0</item>
    </style>
</resources>